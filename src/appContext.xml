<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="mongoClient" class="com.mongodb.MongoClient">
		<constructor-arg index="0" ref="mongoServer" />
		<constructor-arg index="1" >
			<list>
				<ref bean="mongoCredential" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="mongoServer" class="com.mongodb.ServerAddress">
		<constructor-arg index="0" value="ds033459.mongolab.com" />
		<constructor-arg index="1" value="33459" />
	</bean>

	<bean id="mongoCredential" class="com.mongodb.MongoCredential" factory-method="createMongoCRCredential">
		<constructor-arg index="0" value="defaultUser" />
		<constructor-arg index="1" value="hubwayhackathon" />
		<constructor-arg index="2" value="defaultUser" /> 
	</bean>
	
	<bean id="orchestrator" class="com.gala.core.HubwayOrchestrator" init-method="init">
		<constructor-arg index="0" ref="dataLoader" /> 
		<constructor-arg index="1" ref="uiPresenter" />
	</bean>

	<bean id="uiPresenter" class="com.gala.ui.HubwayDataPresenter">
		<constructor-arg index="0" ref="commandLineUI" /> 
		<constructor-arg index="1" > <!-- TEMPORARY - LogicEngine -->
			<null />
		</constructor-arg>
	</bean>
	
	<bean id="commandLineUI" class="com.gala.ui.CommandLineUI" >
		<constructor-arg index="0" ref="forecastIO" />
	</bean>

	<bean id="dataWriter" class="com.gala.dataLoader.MongoDbWriter" init-method="init">
		<constructor-arg index="0" value="mongoClient" />
		<constructor-arg index="1" value="hubwayhackathon" />
		<constructor-arg index="2" >
			<list>
				<value>trips</value>
				<value>stations</value>
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="tripsReaderProcessorPair" class="java.util.AbstractMap.SimpleEntry">
		<constructor-arg index="0" value="hubwayCsvDataReader" />
		<constructor-arg index="1" value="hubwayMongoDbPostProcessor" />
	</bean>
	
	<bean id="stationsReaderProcessorPair" class="java.util.AbstractMap.SimpleEntry">
		<constructor-arg index="0" value="hubwayCsvDataReader" />
		<constructor-arg index="1" value="hubwayMongoDbPostProcessor" />
	</bean>
	
	<bean id="dataLoader" class="com.gala.dataLoader.BaseDataLoader">
		<constructor-arg index="0" >
			<list>
				<ref bean="tripsReaderProcessorPair" />
			</list>
		</constructor-arg>
		<constructor-arg index="1" ref="dataWriter" />
	</bean>
	
	<bean id="hubwayCsvDataReader" class="com.gala.dataLoader.SimpleCsvDataReader" destroy-method="cleanup">
		<constructor-arg index="0" value="c:/filepath" />
		<constructor-arg index="1" value="true" />
		<constructor-arg index="2">
			<null/>
		</constructor-arg> 
	</bean>
	
	<bean id="hubwayMongoDbPostProcessor" class="com.gala.dataLoader.HubwayMongoDbPostProcessor">
		<constructor-arg index="0" value="id" />
		<constructor-arg index="1" value="_id" />
		<constructor-arg index="2" value="trips" />
		<constructor-arg index="3">
			<list>
				<value>trips</value>
			</list>
		</constructor-arg>
		<constructor-arg index="4" ref="hubwayDateFormat" />
		<constructor-arg index="5" value="start_date" />
		<constructor-arg index="6" value="spannedStartDay" />
		<constructor-arg index="7" value="spannedStartTime" />
	</bean>
	
	<bean id="hubwayDateFormat" class="java.text.SimpleDateFormat">
		<constructor-arg index="0" value="yyyy-MM-dd kk:mm:ss" />
	</bean>

	<bean id="forecastIO" class="dme.forecastiolib.ForecastIO">
		<constructor-arg index="0" value="2e4135288e84ee81b4bb8418d67d6710" /> <!-- API KEY -->
	</bean>
</beans>
