<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="mongoClient" class="com.mongodb.MongoClient">
		<constructor-arg index="0" ref="mongoServer" />
		<constructor-arg index="1" >
			<list>
				<ref bean="mongoCredential" />
			</list>
		</constructor-arg>
	</bean>

	<bean id="mongoServer" class="com.mongodb.ServerAddress">
		<constructor-arg index="0" value="ds033459.mongolab.com" />
		<constructor-arg index="1" value="33459" />
	</bean>

	<bean id="mongoCredential" class="com.mongodb.MongoCredential" factory-method="createMongoCRCredential">
		<constructor-arg index="0" value="defaultUser" />
		<constructor-arg index="1" value="hubwayhackathon" />
		<constructor-arg index="2" value="defaultUser" /> 
	</bean>
	
	<bean id="orchestrator" class="com.gala.core.HubwayOrchestrator" init-method="init">
		<constructor-arg index="0" > <!-- TEMPORARY - IDataLoader -->
			<null />
		</constructor-arg>
		<constructor-arg index="1" ref="uiPresenter" />
	</bean>

	<bean id="uiPresenter" class="com.gala.ui.HubwayDataPresenter">
		<constructor-arg index="0" ref="commandLineUI" /> 
		<constructor-arg index="1" > <!-- TEMPORARY - LogicEngine -->
			<null />
		</constructor-arg>
	</bean>
	
	<bean id="commandLineUI" class="com.gala.ui.CommandLineUI" />

	<bean id="dataWriter" class="com.gala.dataLoader.MongoDbWriter" init-method="init">
		<constructor-arg index="0" value="mongoClient" />
		<constructor-arg index="1" value="hubwayhackathon" />
		<constructor-arg index="2" >
			<list>
				<ref bean="trips" />
				<ref bean="stations" />
			</list>
		</constructor-arg>
	</bean>
	
	<bean id="dataLoader" class="com.gala.dataLoader.BaseDataLoader">
		<constructor-arg index="0" value="dataWriter" />
	</bean>

</beans>
